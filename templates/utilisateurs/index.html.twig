{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block main %}

<div class="d-flex align-items-center justify-content-between">
    <h1 class="h3">Gestion des utilisateurs</h1>
    <div>
        <a class="btn btn-outline-success m-1" href="" role="button">Créer un utilisateur</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="">Prénom</th>
            <th class="">Nom</th>
            <th class="">E-mail</th>
            <th class="">Mot de passe</th>
            <th class="">Administrateur</th>
            <th class="">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for utilisateur in utilisateurs %}
        <tr>
            <td>{% if utilisateur.prenom %}{{ utilisateur.prenom }}{% endif %}</td>
            <td>{% if utilisateur.nom %}{{ utilisateur.nom }}{% endif %}</td>
            <td>{{ utilisateur.mail }}</td>
            <td>{% if not utilisateur.password %}- INACTIF -{% endif %}</td>
            <td>{% if utilisateur.admin %}OUI{% endif %}</td>
            <td class="align-middle text-end">
                <a class="btn btn-outline-primary m-1"
                    href="{# {{ path('app_utilisateurs_detail', {id: utilisateur.id}) }} #}"
                    role="button">Afficher/Modifier</a>
                <a class="btn btn-outline-danger m-1"
                    href="{# {{ path('app_utilisateurs_supprimer', {id: utilisateur.id}) }} #}"
                    role="button">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}