{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
<div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <h1 class="h3 mb-3 font-weight-normal">Créer un compte utilisateur</h1>
        {{ form_row(registrationForm.mail) }}
        {# {{ form_row(registrationForm.plainPassword) }} #}
        <div class="form-check mt-3">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms) }}
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-lg btn-outline-danger mt-3" href="{{ path('app_utilisateurs') }}">Annuler</a>
            <button type="submit" class="btn btn-lg btn-outline-success mt-3">Créer le compte</button>
        </div>
        {{ form_end(registrationForm) }}

    </div>
</div>
{% endblock %}