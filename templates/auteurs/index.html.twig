{% extends 'base.html.twig' %}

{% block title %}Les auteurs{% endblock %}

{% block main %}

<h1>Liste des auteurs</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="">Auteur</th>
            <th class="">Biographie</th>
            <th class="">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for auteur in auteurs %}
        <tr>
            <td>{{ auteur.auteur }}</td>
            <td>
                {% if auteur.bio %}
                {{ auteur.bio|slice(0,100)~'[...]' }}
                {% endif %}
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary m-1" href="{{ path('app_auteurs_detail', {id: auteur.id}) }}"
                    role="button">Modifier</a>
                <a class="btn btn-outline-danger m-1" href="{{ path('app_auteurs_suppression', {id: auteur.id}) }}"
                    role="button">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}