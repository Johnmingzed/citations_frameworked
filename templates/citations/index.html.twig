{% extends 'base.html.twig' %}

{% block title %}Les citations{% endblock %}

{% block main %}

<div class="d-flex align-items-center justify-content-between">
    <h1>Liste des citations</h1>
    <div>
        <a class="btn btn-outline-success m-1" href="{{ path('app_citations') }}" role="button">Ajouter une
            citation</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="">Citation</th>
            <th class="">Auteur</th>
            <th class="">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for citation in citations %}
        <tr>
            <td>
                {% if citation.citation|length > 100 %}
                {{ citation.citation|slice(0,100)~'[...]' }}
                {% elseif citation.citation|length <= 100 %} {{ citation.citation}} {% endif %} </td>
            <td>
                {# Attention ! Ã‡a plante en cas d'auteur NULL #}
                {{ citation.getAuteurId().getAuteur() }}
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary m-1" href="{{ path('app_citations', {id: citation.id}) }}"
                    role="button">Afficher/Modifier</a>
                <a class="btn btn-outline-danger m-1" href="{{ path('app_citations', {id: citation.id}) }}"
                    role="button">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}